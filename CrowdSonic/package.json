{
  "name": "crowdsonic",
  "version": "1.0.0",
  "description": "Professional Ultrasonic Visualizer - Transform headless_ultrasonic into a professional Electron application",
  "main": "dist/main.js",
  "homepage": "https://github.com/username/CrowdSonic",
  "author": {
    "name": "CrowdSonic Team",
    "email": "team@crowdsonic.dev"
  },
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "start": "electron .",
    "dev": "webpack --mode=development --watch",
    "electron:dev": "NODE_ENV=development electron .",
    "dist": "electron-builder",
    "dist:mac-universal": "npm run dist:mac-arm && npm run dist:mac-intel",
    "dist:mac-intel": "npm run pre-build:intel && electron-builder --mac --x64 && npm run post-build:intel",
    "pre-build:intel": "cp -r resources/headless_ultrasonic resources/headless_ultrasonic_backup && rm -rf resources/headless_ultrasonic && cp -r resources/headless_ultrasonic_intel resources/headless_ultrasonic && mv resources/headless_ultrasonic/headless_ultrasonic_intel resources/headless_ultrasonic/headless_ultrasonic",
    "post-build:intel": "rm -rf resources/headless_ultrasonic && mv resources/headless_ultrasonic_backup resources/headless_ultrasonic",
    "dist:mac-arm": "cross-env BACKEND_ARCH=arm electron-builder --mac --arm64",
    "clean": "rm -rf dist/",
    "icon": "electron-icon-maker --input=build/icon.png --output=build"
  },
  "keywords": [
    "ultrasonic",
    "visualizer",
    "spectrum-analyzer",
    "audio",
    "fft",
    "electron",
    "professional"
  ],
  "devDependencies": {
    "@types/node": "^24.3.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/pako": "^2.0.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "pako": "^2.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.crowdsonic.app",
    "productName": "CrowdSonic",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/headless_ultrasonic",
        "to": "headless_ultrasonic",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "icon": "build/icons/mac/icon.icns",
      "identity": "-",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "extendInfo": {
        "CFBundleIconName": "icon",
        "CFBundleIconFile": "icon.icns"
      }
    },
    "win": {
      "icon": "build/icons/win/icon.ico",
      "forceCodeSigning": false
    },
    "linux": {
      "icon": "build/icons/png/512x512.png"
    }
  }
}
